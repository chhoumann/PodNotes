{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler",
		"strict": true,
		"noImplicitOverride": true,
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"types": [
			"svelte",
			"node",
			"obsidian",
			"vitest/globals",
			"@testing-library/jest-dom"
		],
		"skipLibCheck": true,
		"lib": ["DOM", "ES2020"]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"vite.config.ts",
		"vitest.config.ts"
	]
}
